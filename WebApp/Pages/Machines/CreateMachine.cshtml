@page
@model WebApp.Pages.Machines.CreateMachineModel
@{
    ViewData["Title"] = "Add a machine";
}

<h1>Tilføj en ny maskine</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" asp-for="@Model.Device.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea cols="120" asp-for="@Model.Device.Description" class="form-control"></textarea>
            </div>
            <div class=" form-group">
                <label>Effekt</label>
                <input type="number" asp-asp-for="@Model.Device.Effect" class="form-control" />
            </div>
            <div class="form-group">
                <label>Average runtime</label>
                <input type="time" asp-for="@Model.Device.RunTime" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Tilføj maskine" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a href="-/" class="btn-link">Tilbage til alle maskiner</a>
